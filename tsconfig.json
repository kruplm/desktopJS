{
    "compilerOptions": {
        "target": "es6",
        "module": "ES2022",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "noImplicitAny": false,
        "declaration": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "es2016",
            "dom"
        ],
        "baseUrl": "packages",
        "paths": {
            "@morgan-stanley/desktopjs": ["desktopjs/src"]
        }
    }
}